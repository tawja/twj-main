<assembly xmlns="http://maven.apache.org/POM/4.0.0/assembly"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0/assembly http://maven.apache.org/xsd/assembly-1.0.0.xsd ">
    <id>twj-package</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
		<!-- Site files -->
		<fileSet>
			<directory>target/website</directory>
			<outputDirectory>webapps/${twjSite.path}</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<!-- Platform files -->
        <fileSet>
            <directory>src/infos</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/platform</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/org/tawja/api/xsd</directory>
            <outputDirectory>webapps/ROOT/xsd</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/org/tawja/api/xsd</directory>
            <outputDirectory>webapps/ROOT/xsd</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/dependencies</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/dependencies</directory>
            <outputDirectory>webapps/platform/WEB-INF/tld</outputDirectory>
            <includes>
                <include>**/*.tld</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>servlet-api.jar</exclude>
                <exclude>jsp-api.jar</exclude>
                <exclude>*-sources.jar</exclude>
                <exclude>*-standalone.jar</exclude>
                <exclude>original-*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*-standalone.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-exe</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.exe</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/tmp/web</directory>
            <outputDirectory>webapps/platform</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
