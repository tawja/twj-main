<assembly xmlns="http://maven.apache.org/POM/4.0.0/assembly"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0/assembly http://maven.apache.org/xsd/assembly-1.0.0.xsd ">
    <id>twj-design</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/design</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*.png</include>
                <include>**/*.jpg</include>
                <include>**/*.gif</include>
                <include>**/*.ico</include>
                <include>**/*.css</include>
                <include>**/*.eot</include>
                <include>**/*.html</include>
                <!--include>**/*.svg</include-->
                <include>**/*.ttf</include>
                <include>**/*.woff</include>
            </includes>
            <excludes>
                <exclude>print/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/generated-design</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*.png</include>
                <include>**/*.jpg</include>
                <include>**/*.gif</include>
                <include>**/*.ico</include>
                <include>**/*.css</include>
                <include>**/*.eot</include>
                <include>**/*.html</include>
                <!--include>**/*.svg</include-->
                <include>**/*.ttf</include>
                <include>**/*.woff</include>
            </includes>
            <excludes>
                <exclude>print/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>

